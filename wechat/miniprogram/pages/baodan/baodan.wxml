<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">姓名</view>
    <input name="name" placeholder="请输入姓名" />
  </view>
  <view class="section section_gap">
    <view class="section__title">年龄</view>
    <slider name="age" show-value ></slider>
  </view>

  <view class="section">
    <view class="section__title">手机号</view>
    <input name="moble" placeholder="请输入手机号码" />
  </view>
  <view class="section section_gap">
    <view class="section__title">性别</view>
    <radio-group name="sex">
      <label><radio value="男"/>男</label>
      <label><radio value="女"/>女</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">保额</view>
    <radio-group name="baoe">
      <label><radio value="10万"/>10万</label>
      <label><radio value="30万"/>30万</label>
      <label><radio value="50万"/>50万</label>
      <label><radio value="100万"/>100万</label>
    </radio-group>
  </view>

  <view class="btn-area">
    <button formType="submit">提交</button>
    <button formType="reset">重置</button>
  </view>
</form>